- set_meta_tags default_meta_tags

%article.articles
  - Article.all.each do |article|
    %a.block.mb-6.no-underline{ href: article.path }
      %strong.font-semibold.underline= article.title
      %p.text-sm
        = "#{CGI.escapeHTML(article.body_only_text[0..100])}..."
        %br
        %small.text-gray-500= article.created_at.strftime("%Y-%m-%d %H:%M:%S")
